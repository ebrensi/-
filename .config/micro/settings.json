{
    "*.js": {
        "tabsize": 2
    },
    "backup": false,
    "basename": true,
    "colorscheme": "dukelight-tc",
    "diffgutter": true,
    "ignorecase": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "rmtrailingws": true,
    "smartpaste": false,
    "softwrap": true,
    "statusformatl": "$(filename)|ft:$(opt:filetype)",
    "statusformatr": "$(modified)($(line)) $(status.paste)",
    "tabstospaces": true
}
